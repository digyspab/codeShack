<% include ../admin.ejs %>


<main role="main" class="container">
    <div class="p-3 bg-white rounded shadow-sm">

        <% if (user.length > 0) { %>
        <h2>Admin Dashboard</h2>
        <!-- START FORM -->

        <table class="table table-hovered table-bordered table-responsive" id="userDetails">
            <caption>Hi Admin </caption>
            <thead class="thead-dark" width='110%' ;>
                <tr>
                    <th scope="col">count</th>
                    <th scope="col">ID</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Maritalstatus</th>
                    <th scope="col">Hobbies</th>
                    <th scope="col">Gender</th>
                    <th scope="col">D.O.B.</th>
                    <th scope="col">Contact Number</th>
                    <th scope="col">house</th>
                    <th scope="col">Street</th>
                    <th scope="col">City</th>
                    <th scope="col">Country</th>
                    <th scope="col">Zip</th>
                    <th scope="col">About Users</th>
                    <!-- <th scope="col">Edit</th> -->
                    <th scope="col">Delete</th>
                    <th scope="col">Block</th>
                </tr>
            </thead>
            <tbody>
                <% user.forEach((user, index) => { %>

                <tr>
                    <th scope="row" class="numbering">  </th>
                    <th scope="row"> <%= user.id%> </th>
                    <td><img src="/assets/img/profile/<%= user.avtar %>" class="rounded-circle player-img"
                            alt="<%= user.username %>" height="55px"></td>
                    <td> <%= user.name%> </td>
                    <td> <%= user.username%> </td>
                    <td> <%= user.email %> </td>
                    <td> <%= user.maritalstatus %> </td>
                    <td> <%= user.hobbies %> </td>
                    <td> <%= user.gender %> </td>
                    <td> <%= user.dob.toLocaleDateString() %> </td>
                    <td> <%= user.contactnumber %> </td>
                    <td> <%= user.house %> </td>
                    <td> <%= user.street %> </td>
                    <td> <%= user.city %> </td>
                    <td> <%= user.country %> </td>
                    <td> <%= user.zip %> </td>
                    <td style="width: 8em;"> <%= user.textareawrite %> </td>

                    <div class="row">
                        <div class="col-2">

                            <div class="col-2">
                                <td>
                                    <a href="/admin/delete/<%= user.id %> " class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </div>
                        </div>
                    </div>

                    <% if(user.status == 1){ %>
                    <td>
                        <input type="submit" class="button" id="<%= user.id %>" value="Block" data-toggle="modal"
                            data-target="#myModal" onclick="block(<%= user.id %>,0)">
                    </td>

                    <%} else { %>
                    <td>
                        <input type="submit" class="button1" id="<%= user.id %>" value="Unblock" data-toggle="modal"
                            data-target="#myModal" onclick="block(<%= user.id %>,1)">
                    </td>
                    <%  } %>
                </tr>

                <% }); %>
            </tbody>
        </table>

        <% } else { %>
        <p class="text-center">No users Found</p>
        <% } %>
        <!-- END FORM -->
    </div>
</main>



<script>
   $(document).ready(function(){
       $("#userDetails").DataTable();
      
   });
</script>




